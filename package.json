{
  "name": "electron-image-viewer",
  "version": "1.0.0",
  "description": "一个现代美观的图片搜索和缩略图查看器",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "electron",
    "image",
    "viewer",
    "thumbnail"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
  },
  "build": {
    "appId": "com.example.electron-image-viewer",
    "productName": "图片查看器",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "node_modules/sharp/**/*"
    ]
  }
